<div class="landing">

  <!-- Hero -->
  <section class="landing-hero">
    <div class="hero-nav">
      <nav class="hero-nav-links">
        <a href="#features">Features</a>
        <a href="#showcase">Showcase</a>
        <a href="#workflow">Workflow</a>
      </nav>
      <div class="hero-nav-actions">
        <a href="/users/sign_in">Sign in</a>
        <a class="btn btn-sm" href="/users/sign_up">Get started</a>
      </div>
    </div>
    <div class="hero-inner">
      <div class="hero-content">
        <%= image_tag "facemelter_logo_darkbg_v3.png", alt: "Facemelter CRM", class: "hero-logo-image" %>
        <p class="hero-label">AI filmmaking leads, organized.</p>
        <h1>Turn AI film signals into a focused lead pipeline.</h1>
        <p class="hero-desc">
          Facemelter CRM keeps your prospecting for AI filmmakers, agencies, and partners in one place.
          Capture signals, qualify fast, and run white&#8209;glove onboarding without the chaos.
        </p>
        <div class="hero-actions">
          <a class="btn" href="/users/sign_up">Create your workspace</a>
          <a class="btn ghost" href="#workflow">How it works</a>
        </div>
        <div class="hero-stats">
          <div>
            <strong>10+</strong>
            <span>Creator partners</span>
          </div>
          <div>
            <strong>200+</strong>
            <span>Signals tagged</span>
          </div>
          <div>
            <strong>120+</strong>
            <span>Outreach touches</span>
          </div>
        </div>
      </div>
      <div class="hero-media">
        <div class="hero-shot-wrap">
          <%= image_tag "landing-dashboard.png", alt: "Facemelter CRM dashboard", class: "hero-shot" %>
        </div>
      </div>
    </div>
  </section>

  <!-- Features -->
  <section id="features" class="landing-section">
    <div class="section-heading">
      <h2>Why Facemelter CRM</h2>
      <p class="section-sub">Everything you need to manage AI filmmaker outreach</p>
    </div>
    <div class="feature-grid">
      <article>
        <h4>Signal&#8209;based qualification</h4>
        <p>Track AI film posts, tool usage, and active projects to prioritize the right leads.</p>
      </article>
      <article>
        <h4>White&#8209;glove ready</h4>
        <p>Keep onboarding notes, scripts, and shot lists in one clear workspace.</p>
      </article>
      <article>
        <h4>Multi&#8209;user teams</h4>
        <p>Invite teammates, assign roles, and keep everyone aligned on outreach.</p>
      </article>
    </div>
  </section>

  <!-- Showcase -->
  <section id="showcase" class="landing-showcase">
    <div class="showcase-image">
      <div class="showcase-frame">
        <div class="showcase-laptop">
          <%= image_tag "landing-leads.png", alt: "Facemelter CRM leads view", class: "showcase-shot" %>
        </div>
      </div>
    </div>
    <div class="showcase-copy">
      <p class="hero-label">Lead queue clarity</p>
      <%= image_tag "facemelter_logo_darkbg.png", alt: "Facemelter CRM logo", class: "showcase-logo-image" %>
      <h2>Unlock the power of <span class="text-accent">Facemelter CRM</span> and revolutionize your outreach.</h2>
      <p>See every lead and signal in one clean view. Built for fast, consistent outreach when you're doing white&#8209;glove onboarding.</p>
      <div class="hero-actions">
        <a class="btn" href="/users/sign_up">Try the workspace</a>
        <a class="btn ghost" href="/users/sign_in">Sign in</a>
      </div>
    </div>
  </section>

  <!-- Workflow -->
  <section id="workflow" class="landing-section">
    <div class="section-heading">
      <h2>Designed for early&#8209;stage outreach</h2>
    </div>
    <div class="workflow-grid">
      <div>
        <span class="step">01</span>
        <h4>Find signals</h4>
        <p>Capture AI film posts from YouTube and X.</p>
      </div>
      <div>
        <span class="step">02</span>
        <h4>Qualify fast</h4>
        <p>Score leads and decide who gets white&#8209;glove time.</p>
      </div>
      <div>
        <span class="step">03</span>
        <h4>Convert</h4>
        <p>Track outreach, onboarding, and early customer wins.</p>
      </div>
    </div>
  </section>

  <!-- Bottom CTA -->
  <section class="landing-cta">
    <h2>Ready to elevate your outreach?</h2>
    <p>Start managing your AI filmmaker leads with confidence.</p>
    <div class="hero-actions">
      <a class="btn" href="/users/sign_up">Get started free</a>
      <a class="btn ghost" href="/users/sign_in">Sign in</a>
    </div>
  </section>

</div>
